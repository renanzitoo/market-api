// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id       String  @id @default(uuid())
  name     String
  brand    String
  price    Float
  Market   Market? @relation(fields: [marketId], references: [id])
  marketId String
}

model Market {
  id      String    @id @default(uuid())
  name    String
  owner   String
  Product Product[]
}
